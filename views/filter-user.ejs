<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add User</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>
<body>
    <%-include ('nav') -%>
    <div class="container">
        <div class="row justify-content-center">
            
          <center>
            <form action="filter-data" method="post">
              find user by email <input type="text" name="email">
              <button type="submit"> show </button>

            </form>
          </center>
            <div class="col-md-6 mt-5">
                <h2 class="fw-bold">All  Users Registered by</h2>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Roll</th>
                        <th scope="col">Name</th>
                        <th scope="col">course</th>
                        <th scope="col">email</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i<users.length; i++) {%>
                      <tr>
                        <td scope="row"><%= (i+1) %></td>
                        <td><%=users[i].roll %></td>
                        <td><%=users[i].name %></td>
                        <td><%=users[i].course %></td>
                        <td><%=users[i].email %></td>
                        <td>
                          <div class="d-flex">
                            <form action="/delete" method="post">
                              <input type="hidden" name="email" value="<%=users[i].email %>">
                              <button class="btn text-danger m-0 px-2 py-0" type="submit">
                               delete
                             </button>
                            </form>
                            <form action="/edit" method="post">
                              <input type="hidden" name="name" value="<%=users[i].name %>">
                              <button class="btn text-primary m-0 px-2 py-0" type="submit">
                               update
                             </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>

        </div>
    </div>
</body>
</html>